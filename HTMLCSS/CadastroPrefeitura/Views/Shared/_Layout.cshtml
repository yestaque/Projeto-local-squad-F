            font-family: Arial, sans-serif;
            background-color: #FFFFFF;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            min-height: 100vh;
            position: relative;
        }

        .ellipse-background {
           background: radial-gradient(circle, #059C7B, #036952, #02362B); /* Com três cores */
            width: 976px;
            height: 891px;
            position: absolute;
            top: -323px;
            left: -133px;
            border-radius: 50%;
            opacity: 1.7;
            z-index: -2;
        }

        .ellipse-background-two {
            background: radial-gradient(circle, #059C7B, #036952, #02362B); /* Com três cores */
            width: 976px;
            height: 891px;
            position: absolute;
            top: 294px;
            left: -267px;
            border-radius: 50%;
            opacity: 1.4;
            z-index: -1;
        }

        .border {
            width: 100%;
            background-color: #4CAF50;
            color: #00000040;
            text-align: center;
            padding: 10px 0;
            font-size: 20px;
            font-weight: bold;
            z-index: 1;
            position: relative;
        }

        .fixed-logo {
        position: fixed;
        bottom: 50px; /* Ajuste a posição inferior */
        left: 150px; /* Ajuste a posição lateral */
        z-index: 10;
        padding: 10px;
        border-radius: 8px; /* Arredonda as bordas */
        
        /* Ajusta a cor da barra de rolagem */
* {
    scrollbar-color: color-mix(in oklch, currentColor 35%, transparent) transparent;
}

/* Define a borda padrão e o estilo */
*, ::before, ::after {
    box-sizing: border-box;
    border-width: 0;
    border-style: solid;
    border-color: #e5e7eb;
       }


       }


        .container {
            width: 100%; /* Ajuste a largura aqui */
            max-width: 400px;
            padding: 20px;
            background-color: #F7F7F7;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.4);
            border-radius: 8px;
            margin: 80px auto;
            position: absolute;
            right: 160px;
            z-index: 1;
            height: auto;
            
        }

        h2 {
            font-family: 'Poppins', sans-serif; /* Aplicando a fonte Poppins */
            font-size: 32px;
            font-weight: 700;
            line-height: 48px;
            text-align: center;
            color: #57be93; /* Mantendo a cor que você já tinha */
            margin-bottom: 10px; /* Reduzindo a margem */

        }

        h5 {
            text-align: center;
            color: #57be93;
            margin-bottom: 12px; /* Reduzindo a margem */
            font-size: 16px; /* Reduzindo o tamanho da fonte */

        }

        label {
            display: block;
            margin-bottom: 8px;
            color: #005d4a;
        }

        input, select {
            width: 80%; /* Ajuste a largura dos campos */
            max-width: 100%; /* Para não ultrapassar a largura */
            padding: 8px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px; /* Ajuste do tamanho da fonte */
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #059C7B;
            border: none;
            border-radius: 4px;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
        
    </style>
</head>
